<!-- the greeting -->

<h1>Welcome <%=@user.username%>!</h1>
<%if @added%>
  <h3>Channel succesfully added!</h3>
<%else%>
  <h3>Here are todays stories:</h3>
<%end%>

<!-- display story section -->


<div class="container">
  <div class="source">
    <%i = 1%>
    <%@stories.each do |story|%>
      <%if i.odd?%>
      <div class="row source">
      <%end%>
        <div class="one-half column">
          <p>
            <%=story.full_title%>
            <%=" - Points: #{story.points}"%>
          </p>
          <p>
            <iframe src="<%=story.url%>"></iframe>
          </p>
          <a href="<%=story.url%>">Read More!</a>
        </div>
      <%if i.even?%>
      </div>
      <%end%>
      <% i +=1 %>
    <%end%>
  </div>
</div>
<!-- bottom menu -->
<h4>Menu: <a href="/add_remove">Add or Remove Channels</a> - <a href="/logout">Logout</a></h4>
