<!-- the greeting -->
<h1>Top o' the Morning to ya!</h1>
<h3>Here are todays stories:</h3>

<!-- display story section -->


<div class="container">
  <div class="source">
    <%i = 1%>
    <%@stories.each do |story|%>
      <%if i.odd?%>
      <div class="row source">
      <%end%>
        <div class="one-half column">
          <%=story.full_title%>
          <%=" - Points: #{story.points}"%>
          <a href="<%=story.url%>"> - Read More!</a>
        </div>
      <%if i.even?%>
      </div>
      <%end%>
      <% i +=1 %>
    <%end%>
  </div>
</div>

